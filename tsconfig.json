{
  "include": ["src/*.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "outDir": "build",
    "strict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "noEmitOnError": true,
    "listEmittedFiles": true
  },
  "typeAcquisition": {
    "enable": true
  }
}
